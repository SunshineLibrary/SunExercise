<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.sunshine_library.exercise"
      android:versionCode="1"
      android:versionName="1.0">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-sdk android:minSdkVersion="8"/>

    <application android:label="@string/app_name"
                 android:name="org.sunshine_library.exercise.app.application.ExerciseApplication">

        <activity android:name=".app.activity.MainActivity"
                  android:screenOrientation="sensorLandscape"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
                android:name=".app.activity.VideoActivity"
                android:screenOrientation="portrait" >
        </activity>

        <service android:enabled="true" android:name="org.sunshine_library.exercise.app.activity.NotificationService" />

        <provider android:name="org.sunshine_library.exercise.metadata.provider.MetadataProvider"
                  android:authorities="org.sunshine_library.exercise.metadata.provider"/>


    </application>




</manifest>
